<div class="container">
  <div class="grid">
    <h3>{{title}}</h3>
    <p>Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
    <p>{{content}}</p>
  </div>
  {{#if logged_in}}

    <form id="comment">

      <input
        id="content"
        type="text"
        name="text"
        placeholder="Add Comments"
        aria-label="Text"
      />

      <button type="submit">Submit</button>
    </form>

  {{/if}}
  <h5>Previous Comments</h5>
  {{#each comments}}
    <div>
      <p>{{commentary}}</p>
      <p> By {{user.username}} on {{format_date createdAt}}</p>
    </div>
  {{/each}}
</div>
{{#if logged_in}}
  <script src="/js/new-comment.js"></script>
{{/if}}